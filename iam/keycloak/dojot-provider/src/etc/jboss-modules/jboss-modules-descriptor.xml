<modules xmlns="http://smartics.de/ns/jboss-modules-descriptor/1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://smartics.de/ns/jboss-modules-descriptor/1 jboss-modules-descriptor.xsd">
    <module name="com.github.dojot.keycloak.providers.dojot-provider">
        <match>
            <includes>
                <include>
                    <groupId>com.github.dojot.keycloak.providers</groupId>
                    <artifactId>dojot-provider</artifactId>
                </include>
            </includes>
        </match>
        <apply-to-module>
            <dependencies>
                <module name="com.fasterxml.jackson.core.jackson-core"/>
                <module name="com.fasterxml.jackson.core.jackson-databind"/>
                <module name="com.fasterxml.jackson.core.jackson-annotations"/>
                <module name="org.jboss.logging" />
                <module name="org.jboss.resteasy.resteasy-jaxrs" />
                <module name="javax.ws.rs.api"/>
                <module name="org.keycloak.keycloak-core" />
                <module name="org.keycloak.keycloak-common" />
                <module name="org.keycloak.keycloak-model-jpa" />
                <module name="org.keycloak.keycloak-server-spi" />
                <module name="org.keycloak.keycloak-server-spi-private" />
                <module name="org.keycloak.keycloak-services" />
            </dependencies>
        </apply-to-module>
    </module>

    <module name="org.apache.kafka.kafka-clients">
        <match>
            <includes>
                <include>
                    <groupId>org.apache.kafka</groupId>
                    <artifactId>kafka-clients</artifactId>
                </include>

                <!-- Compile Dependencies - https://mvnrepository.com/artifact/org.apache.kafka/kafka-clients/2.7.0 -->
                <include>
                    <groupId>com.github.luben</groupId>
                    <artifactId>zstd-jni</artifactId>
                    <!-- version: 1.4.5-6  -->
                </include>

                <include>
                    <groupId>org.lz4</groupId>
                    <artifactId>lz4-java</artifactId>
                    <!-- version: 1.7.1  -->
                </include>

                <include>
                    <groupId>org.xerial.snappy</groupId>
                    <artifactId>snappy-java</artifactId>
                    <!-- version: 1.1.7.7  -->
                </include>
                <!-- 'snappy-java' depends on 'org.osgi.core' -->
                <include>
                    <groupId>org.osgi</groupId>
                    <artifactId>org.osgi.core</artifactId>
                    <!-- version: 4.3.0  -->
                </include>
            </includes>
        </match>
        <apply-to-module>
            <dependencies>
                <module name="javax.api"/>

                <!-- Wildfly Base Module (.jar version 1.7.30) -->
                <module name="org.slf4j"/>

                <!-- Wildfly Base Module (.jar version 2.10.5.0)
                     but org.apache.kafka.kafka-clients:2.7.0 references the version 2.10.5.1  -->
                <module name="com.fasterxml.jackson.core.jackson-core"/>
                <module name="com.fasterxml.jackson.core.jackson-databind"/>
                <module name="com.fasterxml.jackson.core.jackson-annotations"/>
            </dependencies>
        </apply-to-module>
    </module>
</modules>