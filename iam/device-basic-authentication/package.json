{
  "name": "device-basic-authentication",
  "version": "1.0.0",
  "description": "Authentication and authorization mechanism based on username and password.",
  "engines": {
    "node": ">=12.22.0",
    "npm": ">=6.14"
  },
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --inspect=0.0.0.0 ./index.js",
    "debug": "node --inspect=0.0.0.0 index.js",
    "test": "jest --verbose --coverage",
    "clear_jest": "jest --clearCache",
    "test:watch": "jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "check-licenses": "apache2-license-checker"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot/tree/development/iam/device-basic-authentication"
  },
  "keywords": [
    "dojot",
    "basic-authentication",
    "authentication"
  ],
  "files": [
    "package-lock.json",
    "app/**/*.js",
    "app/*.js",
    "test/",
    "!test/coverage/"
  ],
  "author": "Gilmaicor Leandro",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "homepage": "https://github.com/dojot",
  "dependencies": {
    "@dojot/microservice-sdk": "^0.2.1",
    "@types/jest": "^27.0.2",
    "axios": "^0.23.0",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "flat": "^5.0.2",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "http-terminator": "^3.0.3",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.camelcase": "^4.3.0",
    "mongoose": "^5.12.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.0",
    "openid-client": "^5.1.3",
    "openid-connect": "^1.2.4",
    "promise-timeout": "^1.3.0",
    "uuid": "^8.3.2"
  },
  "jest": {
    "verbose": true,
    "testRegex": [
      "test/unit/*",
      "test/integration/*"
    ],
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js",
      "!app/sdk/**/*.js",
      "!app/db/models/*.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "lib"
    ],
    "collectCoverage": true,
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "coverage"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@bbc/apache2-license-checker": "^1.1.4",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.25.1",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.0.14",
    "jest": "^27.2.5",
    "methods": "^1.1.2",
    "nodemon": "^2.0.13",
    "supertest": "^6.0.1"
  }
}
