{
  "name": "certificate-acl",
  "version": "1.0.0",
  "private": true,
  "description": "It consumes association events between certificates and devices from Apache Kafka and builds based on this data an Access Control List (ACL) on Redis",
  "main": "index.js",
  "scripts": {
    "certificate-acl": "node --unhandled-rejections=strict index.js",
    "certificate-acl-debug": "node --inspect=0.0.0.0 --unhandled-rejections=strict index.js",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "check-licenses": "apache2-license-checker",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https:github.com/dojot"
  },
  "keywords": [
    "acl",
    "certificate",
    "device",
    "dojot",
    "kafka",
    "redis"
  ],
  "author": "Rafael Augusto Scaraficci",
  "contributors": [
    "@jonaphael"
  ],
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "dependencies": {
    "@dojot/microservice-sdk": "^0.2.1-beta.1",
    "awilix": "^6.1.0",
    "lodash.camelcase": "^4.3.0",
    "redis": "^3.0.2",
    "http-terminator": "^3.0.0",
    "http-status-codes": "^2.1.4",
    "promise-timeout": "^1.3.0"
  },
  "devDependencies": {
    "@bbc/apache2-license-checker": "^1.1.4",
    "@types/jest": "^26.0.15",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/test/**/**.test.js"
    ],
    "testPathIgnorePatterns": [
      "./node_modules"
    ],
    "verbose": true
  }
}
