{
  "name": "device-manager",
  "version": "0.0.1",
  "description": "Service to manage devices on dojot",
  "engines": {
    "node": ">=16.13.2",
    "npm": ">=7.24.2"
  },
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --inspect ./index.js --ignore ./config -V",
    "dev-debug": "node --inspect=0.0.0.0 src/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "check-licenses": "apache2-license-checker",
    "clear-jest": "jest --clearCache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot"
  },
  "keywords": [
    "dojot",
    "device",
    "manager"
  ],
  "files": [
    "package-lock.json",
    "src/**/*.js",
    "src/*.js",
    "test/",
    "!test/coverage/"
  ],
  "author": "Luis Antonio Dias de SÃ¡ Junior",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "homepage": "https://github.com/dojot",
  "dependencies": {
    "@dojot/microservice-sdk": "^0.2.0-beta.1",
    "@types/jest": "^27.0.1",
    "awilix": "^6.0.0",
    "axios": "^0.25.0",
    "express": "^4.17.1",
    "flat": "^5.0.2",
    "http-terminator": "^3.0.3",
    "jsonwebtoken": "^8.5.1",
    "lodash.camelcase": "^4.3.0"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@bbc/apache2-license-checker": "^1.1.4",
    "axios-mock-adapter": "^1.20.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.0.14",
    "jest": "^27.3.1",
    "methods": "^1.1.2",
    "supertest": "^6.0.1"
  }
}
