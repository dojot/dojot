{
  "name": "certificates-sidecar",
  "version": "0.0.1",
  "private": true,
  "description": "The Cert-Sidecar is a service utility for managing x509-identity-mgmt certificates for use with TLS connections.",
  "engines": {
    "node": ">=12.18",
    "npm": ">=6.14"
  },
  "main": "index.js",
  "scripts": {
    "cert-sidecar": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --no-cache --detectOpenHandles",
    "test:watch": "jest --watchAll --no-cache --runInBand",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot"
  },
  "keywords": [
    "dojot",
    "x509",
    "tls",
    "certificates",
    "sidecar"
  ],
  "files": [
    "package-lock.json",
    "app/**/*.js",
    "test/",
    "!test/unit/coverage/"
  ],
  "author": "@mprevide",
  "license": "GPL-3.0",
  "dependencies": {
    "@dojot/microservice-sdk": "^0.1.6",
    "axios": "^0.19.2",
    "axios-retry": "^3.1.9",
    "cron": "^1.8.2",
    "moment": "^2.29.0",
    "openssl-nodejs": "^1.0.5",
    "pem": "^1.14.4",
    "superagent": "^6.1.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": [
      "test/unit/*"
    ],
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "lib"
    ],
    "collectCoverage": true,
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "test/unit/coverage"
    ],
    "coverageDirectory": "test/unit/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4"
  }
}