kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: flowbroker-role-binding
  namespace: {{ dojot_namespace }}
subjects:
- kind: ServiceAccount
  name: flowbroker
  namespace: {{ dojot_namespace }}
roleRef:
  kind: Role #this must be Role or ClusterRole
  name: flowbroker-role # this must match the name of the Role or ClusterRole you wish to bind to
  apiGroup: rbac.authorization.k8s.io
