{
  "name": "http-agent",
  "version": "0.0.1",
  "description": "IoTAgent to receive messages from devices via HTTPS and forward them to the dojot messaging system.",
  "engines": {
    "node": ">=12.22.0",
    "npm": ">=6.14"
  },
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --inspect ./index.js --ignore ./config -V",
    "debug": "node --inspect=0.0.0.0 index.js",
    "test": "jest",
    "test:watch": "jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "check-licenses": "apache2-license-checker",
    "clear-jest": "jest --clearCache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot"
  },
  "keywords": [
    "dojot",
    "iotagent",
    "http"
  ],
  "files": [
    "package-lock.json",
    "app/**/*.js",
    "app/*.js",
    "test/",
    "!test/coverage/"
  ],
  "author": "Gilmaicor Leandro",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "homepage": "https://github.com/dojot",
  "dependencies": {
    "@dojot/microservice-sdk": "0.2.1",
    "@types/jest": "^27.0.1",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "flat": "^5.0.2",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "http-terminator": "^2.0.3",
    "joi": "^17.4.2",
    "lodash.camelcase": "^4.3.0",
    "promise-timeout": "^1.3.0",
    "redis": "^3.1.2",
    "uuid4": "^2.0.2"
  },
  "jest": {
    "verbose": true,
    "testRegex": [
      "test/unit/*",
      "test/integration/*"
    ],
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js",
      "!app/sdk/**/*.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "lib"
    ],
    "collectCoverage": true,
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "test/coverage"
    ],
    "coverageDirectory": "test/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@bbc/apache2-license-checker": "^1.1.4",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.0.14",
    "jest": "^27.3.1",
    "methods": "^1.1.2",
    "supertest": "^6.0.1"
  }
}
