{
  "name": "kafka2ftp",
  "version": "1.0.0",
  "private": true,
  "description": "The kafka2ftp service provides a connector solution for forwarding messages from Apache Kafka to FTP servers",
  "main": "app/Ftp.js",
  "scripts": {
    "kafka2ftp": "node app/Index.js",
    "dev": "nodemon app/Index.js",
    "test": "jest test/**/*.test.js --coverage",
    "test:watch": "jest --watch test/**/*.test.js --coverage",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot"
  },
  "keywords": [
    "ftp",
    "kafka",
    "dojot"
  ],
  "files": [
    "package-lock.json",
    "app/**/*.js",
    "test/",
    "!test/unit/coverage/"
  ],
  "dependencies": {
    "@dojot/dojot-module-logger": "0.0.1-alpha.5",
    "@dojot/microservice-sdk": "^0.1.1",
    "async-retry": "^1.3.1",
    "basic-ftp": "^4.5.3"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/Index.js",
      "!app/ReadStream.js",
      "!app/Config.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "@mprevide",
  "license": "GPL-3.0"
}