{
  "name": "v2kbridge",
  "version": "1.0.0",
  "private": true,
  "description": "Service to bridge messages from VerneMQ to Apache Kafka according to dojot rules.",
  "engines": {
    "node": ">=12.18",
    "npm": ">=6.14"
  },
  "homepage": "https://github.com/dojot/dojot",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot",
    "directory": "connector/mqtt/vernemq/v2k-bridge"
  },
  "main": "index.js",
  "scripts": {
    "app": "node index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "keywords": [
    "dojot",
    "mqtt",
    "vernemq",
    "kafka"
  ],
  "author": "Eduardo Garcia Misiuk, Jonaphael Aristil, Muhamed Avila",
  "license": "GPL-3.0, ISC",
  "dependencies": {
    "@dojot/microservice-sdk": "0.1.6",
    "async": "^3.1.1",
    "lodash.camelcase": "^4.3.0",
    "md5": "^2.2.1",
    "mqtt": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^26.6.0",
    "jest-mock-process": "^1.3.2"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleDirectories": [
      "node_modules",
      "app",
      "."
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": [
      "test/unit/*"
    ],
    "verbose": true
  }
}