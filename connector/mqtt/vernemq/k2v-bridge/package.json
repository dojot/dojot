{
  "name": "k2v-bridge",
  "version": "1.0.0",
  "private": true,
  "description": "Service to bridge messages from Apache Kafka to VerneMQ according to dojot rules.",
  "homepage": "https://github.com/dojot/dojot",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot",
    "directory": "connector/mqtt/vernemq/k2v-bridge"
  },
  "main": "index.js",
  "scripts": {
    "app": "node app/index.js",
    "test": "jest test/**/*.test.js",
    "coverage": "jest --collect-coverage"
  },
  "keywords": [
    "dojot",
    "kafka",
    "mqtt",
    "node",
    "vernemq"
  ],
  "author": "Eduardo Garcia Misiuk, Muhamed Avila, Jonaphael Aristil",
  "license": "GPL-3.0, ISC",
  "dependencies": {
    "@dojot/dojot-module-logger": "0.0.1-alpha.5",
    "@dojot/iotagent-nodejs": "2.1.0-beta.8",
    "mqtt": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/index.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
