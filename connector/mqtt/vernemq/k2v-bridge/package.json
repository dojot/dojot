{
  "name": "k2v-bridge",
  "version": "1.0.0",
  "private": true,
  "description": "Service to bridge messages from Apache Kafka to VerneMQ according to dojot rules.",
  "engines": {
    "node": ">=12.18.4",
    "npm": ">=6.14.8"
  },
  "homepage": "https://github.com/dojot/dojot",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot",
    "directory": "connector/mqtt/vernemq/k2v-bridge"
  },
  "main": "index.js",
  "scripts": {
    "app": "node index.js",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "keywords": [
    "dojot",
    "kafka",
    "mqtt",
    "vernemq"
  ],
  "author": "Eduardo Garcia Misiuk, Muhamed Avila, Jonaphael Aristil",
  "license": "GPL-3.0, ISC",
  "dependencies": {
    "@dojot/microservice-sdk": "^0.1.6",
    "flat": "^5.0.0",
    "lodash.camelcase": "^4.3.0",
    "mqtt": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^26.6.3"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.js",
      "!index.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleDirectories": [
      "node_modules",
      "app",
      "."
    ],
    "testPathIgnorePatterns": [
      "./node_modules"
    ],
    "testRegex": [
      "test/unit/*"
    ],
    "verbose": true
  }
}
