{
  "name": "latency-pub-test-prometheus",
  "version": "0.1.0",
  "description": "Service to collect latency between publication MQTT and Kafka with Dojot, and expose to prometheus",
  "main": "app/Index.js",
  "license": "GPL-3.0",
  "homepage": "https://github.com/dojot/dojot",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot.git"
  },
  "author": "@mprevide",
  "scripts": {
    "run-client": "node app/Index.js",
    "test": "jest test/**/*.test.js",
    "test:watch": "jest test/**/*.test.js --watchAll",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "keywords": [
    "prometheus",
    "dojot",
    "kafka",
    "mqtt"
  ],
  "dependencies": {
    "@dojot/dojot-module-logger": "0.0.1-alpha.5",
    "@dojot/dojot-module": "0.0.1-beta.8",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "prom-client": "^11.5.3",
    "simple-statistics": "^7.0.5"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "moduleDirectories": [
      "node_modules",
      "lib"
    ],
    "collectCoverageFrom": [
      "!app/Index.js",
      "!Config.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}